# Dev image for running tests & hacking on the repo
# Includes pytest and copies the tests/ folder.
FROM python:3.12-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    dnsutils \
    whois \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml README.md ./
COPY url_reputation/ ./url_reputation/
COPY web/ ./web/
COPY tests/ ./tests/

# Install package + web deps + dev deps
RUN pip install --no-cache-dir ".[dev]" fastapi uvicorn[standard]

EXPOSE 8000

CMD ["bash", "-lc", "uvicorn web.api:app --host 0.0.0.0 --port 8000"]
